<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/text_date_output"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:textSize="40dp" />

    <TextView
        android:id="@+id/text_time_output"
        android:layout_width="match_parent"
        android:layout_height="32dp"/>

    <EditText
        android:id="@+id/text_input"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:textSize="18dp"
        android:background="@drawable/text_input_layout"
        android:scrollHorizontally="true"
        android:hint="1h remind me in an hour"
        android:gravity="left|top"
        />

    <Spinner
        android:id="@+id/cal_spinner"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:background="@drawable/text_input_layout" />

    <Button
        android:id="@+id/remind_btn"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_remind"
        android:layout_gravity="right|top"
        android:text="Remind" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="m = Minutes" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="h = Hours" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="d = days" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="w = Weeks" />
</LinearLayout>